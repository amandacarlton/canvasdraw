extends layout

block content
  h1= title
  canvas#canvas(width='500', height='500')
  form(action="", method="post")
    label(for="shapePick") Pick a Shape: 
    select(id="shapePick", name="shapePick") 
      option(value="Square", name="Square") Square
      option(value="Circle", name= "Circle") Circle
    p
    label(for="color") Pick a Color: 
    input(type="color" value="#ffffff" id="color")
    p
    label(for="width") Pick a Width: 
    input(type="number" id="width" name="width" required)
    p
    input(type="button" id="delete" name="delete" value="Clear Squares") 
    p
    input(type="button" id="bye" name="bye" value="Clear Circles") 
    p
    input(type="button" id="homo" name="homo" value="One Square Color")
    p
    input(type="button" id="one" name="one" value="One Circle Color")
    p
    input(type="button" id="random" name"random" value="Randomize")
  script(src="javascripts/canvas.js")
    
